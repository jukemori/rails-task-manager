<% if @task.errors.any? %>
  <% @task.errors.full_messages.each do |message| %>
    <p class='text-danger'><%= message %></p>
  <% end %>
<% end %>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.label :completed %>
  <%= f.check_box :completed %>
  <%= f.submit %>
<% end %>
