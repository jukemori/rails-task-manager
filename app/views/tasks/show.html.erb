<div class="contaienr">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <%if @task.completed%>
  <p>✅️</p>
  <%else%>
  <p>🟩</p>
  <%end%>
  <p>
    <%= link_to 'Tasks', tasks_path %>
  </p>
  <p>
    <%= link_to 'Delete', task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?" } %>
  </p>
  <p>
    <%= link_to 'Edit', edit_task_path %>
  </p>
</div>
